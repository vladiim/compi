%section
  %header
    %h1 Get report
    %h4 Free competitor intelligence report

  %section
    = form_tag '/reports', method: 'post' do
      = flash_tag(:notice)
      = field_set_tag(class: 'form-inputs') do
        %p
          = label_tag :competitor_website
          = url_field_tag :competitor_website, value: params[:website], placeholder: 'http://www.competitor-site.com'
        %p
          = label_tag :email
          = email_field_tag :email, value: params[:email], placeholder: 'your@email.com'

        .checkbox
          %label
            %input{ type: 'checkbox' } Get CI updates

      = field_set_tag(class: 'buttons') do
        = submit_tag 'Get report', class: 'btn btn-default'